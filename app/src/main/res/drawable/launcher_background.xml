<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:opacity="opaque">

    <!--Set the Background Image-->
    <item
        android:width="800dp"
        android:height="1500dp"
        android:gravity="center"
        tools:ignore="UnusedAttribute">

        <bitmap
            android:gravity="fill_horizontal|fill_vertical"
            android:src="@drawable/nerdslot_splash_img"
            android:tint="@color/white_tint"
            android:tintMode="src_atop" />
    </item>

    <item
        android:width="@dimen/dimen_120"
        android:height="@dimen/dimen_110"
        android:gravity="center"
        tools:ignore="UnusedAttribute">

        <bitmap
            android:filter="false"
            android:src="@drawable/logo" />
    </item>

    <item
        android:width="@dimen/dimen_170"
        android:height="@dimen/dimen_90"
        android:drawable="@drawable/logo_text"
        android:gravity="center"
        android:left="@dimen/dimen_5"
        android:top="@dimen/dimen_100"
        tools:ignore="UnusedAttribute" />
</layer-list>