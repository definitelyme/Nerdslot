<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/MaterialTheme"
    tools:context=".Fragments.Main.Account">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/email_signIn_btn"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_65"
                android:layout_below="@id/material_card_view"
                android:layout_marginStart="@dimen/dimen_9"
                android:layout_marginEnd="@dimen/dimen_9"
                android:text="@string/admin_signIn_btn"
                android:textAllCaps="false"
                android:textColor="@color/add_admin_color"
                android:textSize="@dimen/font_18"
                app:backgroundTint="@color/white"
                app:cornerRadius="@dimen/dimen_3"
                app:rippleColor="@color/midGrey" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/preference_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_signIn_btn"
                android:paddingBottom="@dimen/dimen_15"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dimen_3"
                app:cardElevation="@dimen/dimen_8"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPaddingTop="@dimen/dimen_8">

                <RelativeLayout
                    android:id="@+id/download_options_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/email_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_layout_header"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dimen_10"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.35"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_message" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.65"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/acc_primary_textView"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/acc_email_textView"
                                android:layout_marginTop="@dimen/dimen_minus_8"
                                android:layout_marginBottom="@dimen/dimen_5"
                                android:paddingStart="@dimen/dimen_10"
                                android:paddingEnd="@dimen/dimen_10"
                                android:text="@string/primary_string"
                                android:textSize="@dimen/font_13" />

                            <View
                                android:id="@+id/divider"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_1"
                                android:layout_below="@id/acc_primary_textView"
                                android:layout_marginStart="@dimen/dimen_10"
                                android:layout_marginEnd="@dimen/dimen_10"
                                android:background="?android:attr/listDivider" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/acc_email_textView"
                                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_48"
                                android:layout_marginEnd="@dimen/dimen_10"
                                android:background="@drawable/ripple_rectangle_bg"
                                android:gravity="start|center_vertical"
                                android:paddingStart="@dimen/dimen_10"
                                android:paddingEnd="@dimen/dimen_10"
                                android:text="@string/na"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_19"
                                app:backgroundTint="@color/white"
                                app:cornerRadius="@dimen/dimen_0"
                                app:rippleColor="@color/midGrey"
                                app:textAllCaps="false" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/phone_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/email_layout"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dimen_10"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.35"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_phone" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.65"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/acc_mobile_textView"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/acc_phone_textView"
                                android:layout_marginTop="@dimen/dimen_minus_8"
                                android:layout_marginBottom="@dimen/dimen_5"
                                android:paddingStart="@dimen/dimen_10"
                                android:paddingEnd="@dimen/dimen_10"
                                android:text="@string/mobile_string"
                                android:textSize="@dimen/font_13" />

                            <View
                                android:id="@+id/divider2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_1"
                                android:layout_below="@id/acc_mobile_textView"
                                android:layout_marginStart="@dimen/dimen_10"
                                android:layout_marginEnd="@dimen/dimen_10"
                                android:background="?android:attr/listDivider" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/acc_phone_textView"
                                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_48"
                                android:layout_marginEnd="@dimen/dimen_10"
                                android:background="@drawable/ripple_rectangle_bg"
                                android:gravity="start|center_vertical"
                                android:paddingStart="@dimen/dimen_10"
                                android:paddingEnd="@dimen/dimen_10"
                                android:text="@string/na"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_19"
                                app:backgroundTint="@color/white"
                                app:cornerRadius="@dimen/dimen_0"
                                app:rippleColor="@color/midGrey"
                                app:textAllCaps="false" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gender_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phone_layout"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dimen_10"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.35"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerInside" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.65"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/gender_textView"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/gender_material_txtView"
                                android:layout_marginTop="@dimen/dimen_minus_8"
                                android:layout_marginBottom="@dimen/dimen_5"
                                android:paddingStart="@dimen/dimen_10"
                                android:paddingEnd="@dimen/dimen_10"
                                android:text="@string/gender_string"
                                android:textSize="@dimen/font_13" />

                            <View
                                android:id="@+id/divider3"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_1"
                                android:layout_below="@id/gender_textView"
                                android:layout_marginStart="@dimen/dimen_10"
                                android:layout_marginEnd="@dimen/dimen_10"
                                android:background="?android:attr/listDivider" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/gender_material_txtView"
                                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_48"
                                android:layout_marginEnd="@dimen/dimen_10"
                                android:background="@drawable/ripple_rectangle_bg"
                                android:gravity="start|center_vertical"
                                android:paddingStart="@dimen/dimen_10"
                                android:paddingEnd="@dimen/dimen_10"
                                android:text="@string/na"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_19"
                                app:backgroundTint="@color/white"
                                app:cornerRadius="@dimen/dimen_0"
                                app:rippleColor="@color/midGrey"
                                app:textAllCaps="false" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dob_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gender_layout"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dimen_10"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.35"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_calender" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.65"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/dob_textView"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/dob_material_textView"
                                android:layout_marginTop="@dimen/dimen_minus_8"
                                android:layout_marginBottom="@dimen/dimen_5"
                                android:paddingStart="@dimen/dimen_10"
                                android:paddingEnd="@dimen/dimen_10"
                                android:text="@string/dob_string"
                                android:textSize="@dimen/font_13" />

                            <View
                                android:id="@+id/divider4"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_1"
                                android:layout_below="@id/dob_textView"
                                android:layout_marginStart="@dimen/dimen_10"
                                android:layout_marginEnd="@dimen/dimen_10"
                                android:background="?android:attr/listDivider" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/dob_material_textView"
                                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_48"
                                android:layout_marginEnd="@dimen/dimen_10"
                                android:background="@drawable/ripple_rectangle_bg"
                                android:gravity="start|center_vertical"
                                android:paddingStart="@dimen/dimen_10"
                                android:paddingEnd="@dimen/dimen_10"
                                android:text="@string/na"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_19"
                                app:backgroundTint="@color/white"
                                app:cornerRadius="@dimen/dimen_0"
                                app:rippleColor="@color/midGrey"
                                app:textAllCaps="false" />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/profile_layout_header"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dimen_15"
                        android:paddingEnd="@dimen/dimen_15"
                        android:text="@string/info_string"
                        android:textSize="@dimen/font_18" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/material_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dimen_3"
                app:cardElevation="@dimen/dimen_8"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dimen_40">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/user_image_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ripple_round"
                        android:padding="@dimen/dimen_20">

                        <ImageView
                            android:id="@+id/user_image"
                            android:layout_width="@dimen/dimen_80"
                            android:layout_height="@dimen/dimen_80"
                            android:contentDescription="@string/display_name_string"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_user_img" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/user_name"
                        style="@style/Widget.MaterialComponents.TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_image_layout"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dimen_18"
                        android:gravity="center"
                        android:text="@string/display_name_string"
                        android:textColor="@color/darkGrey"
                        android:textSize="@dimen/font_22" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGrey"
        android:theme="@style/Main.Toolbar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/account_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="top" />
    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>