<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/card_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/horizontal_divider"
        android:padding="@dimen/dimen_0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_160"
        app:cardBackgroundColor="@color/fui_transparent"
        app:cardElevation="@dimen/dimen_0"
        app:cardMaxElevation="@dimen/dimen_0"
        app:cardPreventCornerOverlap="true"
        app:contentPaddingBottom="@dimen/dimen_4"
        app:contentPaddingLeft="@dimen/dimen_15"
        app:contentPaddingRight="@dimen/dimen_15"
        app:contentPaddingTop="@dimen/dimen_4">

        <LinearLayout
            android:id="@+id/cardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dimen_6"
                android:layout_weight="0.73"
                android:contentDescription="@string/product_image_description"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/product_img" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_6"
                android:layout_weight="1.27"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/actions"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0"
                    android:layout_weight="0.9"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:layout_width="@dimen/dimen_0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.06" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/subscribe_btn"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        android:layout_width="@dimen/dimen_0"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.97"
                        android:text="@string/category_magazine"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12"
                        android:theme="@style/MaterialTheme"
                        app:backgroundTint="@color/colorAccentDark"
                        app:cornerRadius="@dimen/dimen_2"
                        app:rippleColor="@color/midGrey" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/purchase_btn"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        android:layout_width="@dimen/dimen_0"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.97"
                        android:text="@string/product_purchase_txt"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12"
                        android:theme="@style/MaterialTheme"
                        app:backgroundTint="@color/colorAccentDark"
                        app:cornerRadius="@dimen/dimen_2"
                        app:rippleColor="@color/midGrey" />
                </LinearLayout>

                <!--If there's any problem displaying this layout, remove the tools:targetApi-->
                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:ellipsize="end"
                    android:justificationMode="inter_word"
                    android:maxLines="4"
                    android:paddingStart="@dimen/dimen_6"
                    android:paddingEnd="@dimen/dimen_6"
                    android:text="@string/product_description"
                    android:textAllCaps="false"
                    tools:targetApi="o" />

                <TextView
                    android:id="@+id/product_title"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0"
                    android:layout_weight="0.7"
                    android:gravity="start|center"
                    android:paddingStart="@dimen/dimen_6"
                    android:paddingEnd="@dimen/dimen_6"
                    android:text="@string/product_title"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>